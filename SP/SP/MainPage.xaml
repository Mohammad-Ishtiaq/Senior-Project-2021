<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Login or Sign-Up Below" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="LoginButton" Clicked="LoginButton_Clicked" Text="Login"></Button>
        <Button x:Name="SignUpButton" Clicked="SignUpButton_Clicked" Text="Sign-Up"></Button>

    </StackLayout>

</ContentPage>
