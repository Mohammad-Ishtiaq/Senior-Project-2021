<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Please fill in the Form below" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry Placeholder="Age" HorizontalTextAlignment="Center"></Entry>
        <Entry Placeholder="Sex" HorizontalTextAlignment="Center"></Entry>
        <Entry Placeholder="Birth Year" HorizontalTextAlignment="Center"></Entry>
        <Button Text="Submit"></Button>

        <Label Text="Optional:" HorizontalTextAlignment="Center" Padding="10" FontSize="25" TextColor="Black"></Label>
        <Label Text="This is a demo application!" HorizontalTextAlignment="Center" Padding="0" FontSize="25" TextColor="Black"></Label>

    </StackLayout>

</ContentPage>
