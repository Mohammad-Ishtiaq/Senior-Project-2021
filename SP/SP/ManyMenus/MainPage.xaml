<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP.MainPage">

    <StackLayout>
        <Button x:Name="SymptomCheckerButton"
                Clicked="SymptomCheckerButton_Clicked"
                Padding="20,50,20,50"
                Text="Symptom"
                FontSize="30"
                TextColor="Green"
                FontAttributes="Bold"/>

        <Button x:Name="OTCCheckerButton"
                Clicked="OTCCheckerButton_Clicked"
                Padding="20,50,20,50"
                Text="Over the Counter"
                FontSize="30"
                TextColor="Red"
                FontAttributes="Bold"/>

        <Button x:Name="CovidCheckerButton"
                Clicked="CovidCheckerButton_Clicked"
                Padding="20,50,20,50"
                Text="Covid Checker"
                FontSize="30"
                TextColor="Blue"
                FontAttributes="Bold"/>

        <Label Text="information:" 
               HorizontalTextAlignment="Center"
               FontSize="15"/>

        <Label Text="Senior Project Fall 2021" 
               HorizontalTextAlignment="Center"
               FontSize="15"/>
    </StackLayout>

</ContentPage>
